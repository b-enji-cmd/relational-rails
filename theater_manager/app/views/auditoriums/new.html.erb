<form action="/auditoriums" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new auditorium:</p>
  Name: <input type='text' name='auditorium[name]'/><br/><br>
  Capacity: <input type='number' name='auditorium[capacity]'></input><br/><br>
  Imax Theater: <input type='radio' id="true" name='auditorium[is_imax_theater?]' value="true"></input>
                <label for "true">Yes</label>
                <input type='radio' id="false" name='auditorium[is_imax_theater?]' value="false"></input>
                              <label for "false">No</label><br><br>
  <input type='submit' value="Create Auditorium"/>
</form>
